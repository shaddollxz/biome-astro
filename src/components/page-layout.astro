---
interface Props {
  title?: string
  showHeader?: boolean
}
const { title = 'Astro' } = Astro.props

const arr = ['a', 'b', 'c']
---
<!doctype html>
<html lang="zh" class="dark">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <meta name="generator" content={Astro.generator}>
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground">
    <div class="flex-1">
      <slot/>

      <ul>
        {
          arr.map(item => {
            return (
              <li>
                {/* FIXME: remove this line and next line, format will pass */}
                {item}
                <span>li item</span>
              </li>
            )
          }
        ) }
      </ul>
    </div>
  </body>
</html>
